{
  "name": "root",
  "version": "0.1.0",
  "description": "Exotic components, hooks and functions you wouldn't find in most react component libraries.",
  "private": true,
  "scripts": {
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build-all": "pnpm -r --filter './tools/**' --filter './core/**' run build ",
    "lint": "biome check .",
    "lint:relative": "biome check --changed",
    "lint:fix": "biome check --apply --changed",
    "lint:fixAll": "biome check . --apply",
    "dev": "pnpm -r --parallel run dev",
    "test": "vitest",
    "ct:run": "playwright test -c playwright-ct.config.ts",
    "prepare": "husky"
  },
  "author": "Rico Maier <rico.maier@etecture.de>",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@etecture/rex-builder": "0.1.0",
    "@opentelemetry/api": "^1.9.0",
    "@playwright/experimental-ct-react": "^1.51.1",
    "@playwright/test": "^1.51.1",
    "@storybook/addon-actions": "^8.6.7",
    "@storybook/addon-controls": "^8.6.7",
    "@storybook/addon-docs": "^8.6.7",
    "@storybook/addon-interactions": "^8.6.7",
    "@storybook/addon-links": "^8.6.7",
    "@storybook/addon-viewport": "^8.6.7",
    "@storybook/blocks": "^8.6.7",
    "@storybook/manager-api": "^8.6.7",
    "@storybook/react": "^8.6.7",
    "@storybook/react-vite": "^8.6.7",
    "@storybook/theming": "^8.6.7",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.4",
    "happy-dom": "^17.4.4",
    "husky": "^9.1.7",
    "postcss-preset-env": "10.1.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "storybook": "^8.6.7",
    "typescript": "^5.8.2",
    "vite": "^6.2.2",
    "vitest": "^3.0.9"
  },
  "pnpm": {
    "overrides": {
      "@testing-library/dom": "^10.1.0"
    }
  },
  "packageManager": "pnpm@10.6.5"
}
